# HighSeas CasaOS Environment Configuration
# Copy this file to .env and configure your settings

# ========================================
# REQUIRED: Real-Debrid Configuration
# ========================================

# Real-Debrid API Token (REQUIRED)
# Get your token from: https://real-debrid.com/apitoken
# Without this token, the application will not function properly
REAL_DEBRID_TOKEN=your_real_debrid_token_here

# ========================================
# Server Configuration
# ========================================

# Production environment
NODE_ENV=production

# Server port (default: 6969)
# Make sure this matches the port in docker-compose.yml
PORT=6969

# Request body size limit for uploads
BODY_SIZE_LIMIT=10mb

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# Optional: Advanced Configuration
# ========================================

# Custom Stremio API URL (leave empty for default)
# Only change if you're running a custom Stremio instance
STREMIO_API_URL=

# FFmpeg Configuration (for HLS transcoding)
# These are advanced settings, only modify if you know what you're doing

# Enable AMD GPU acceleration (VAAPI) - set to 'false' to disable
ENABLE_AMD_GPU=true

# FFmpeg binary path (leave empty for system default)
FFMPEG_PATH=

# HLS segment duration in seconds (default: 10)
HLS_SEGMENT_DURATION=10

# Maximum concurrent transcoding sessions (default: 3)
MAX_TRANSCODING_SESSIONS=3

# ========================================
# CasaOS Integration
# ========================================

# CasaOS App Name (displayed in UI)
CASAOS_APP_NAME=HighSeas

# CasaOS Category
CASAOS_CATEGORY=Media

# Custom domain for CasaOS reverse proxy (optional)
CASAOS_DOMAIN=

# ========================================
# Security Settings
# ========================================

# CORS allowed origins (comma-separated, leave empty for defaults)
# Example: CORS_Origins=http://localhost:3000,https://mydomain.com
CORS_ORIGINS=

# API rate limiting (requests per 15 minutes, default: 100)
RATE_LIMIT=100

# Additional security headers (automatically applied)
# CSP, X-Frame-Options, X-Content-Type-Options, etc.

# ========================================
# Development Settings (ignore in production)
# ========================================

# Development logging (creates daily log files)
DEV_LOGGING=false

# Debug mode (more verbose logging)
DEBUG=false