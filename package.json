{
	"name": "highseas-tv",
	"private": true,
	"version": "1.1.4",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"start": "node server/index.js",
		"docker:build": "docker build -t highseas-streaming:latest .",
		"docker:run": "docker run -d --name highseas-streaming -p 6969:6969 --restart unless-stopped highseas-streaming:latest",
		"docker:publish": "./publish-docker.sh",
		"docker:up": "docker-compose up -d",
		"docker:up:local": "docker-compose -f docker-compose.local.yml up -d",
		"docker:up:prod": "docker-compose -f docker-compose.production.yml up -d",
		"docker:down": "docker-compose down",
		"format": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:all": "npm run test && npm run test:e2e",
		"build:capacitor": "CAPACITOR_BUILD=true npm run build",
		"cap:sync": "npx cap sync android",
		"cap:open": "npx cap open android",
		"cap:build": "npm run build:capacitor && npx cap sync android",
		"cap:run": "npm run cap:build && npx cap run android",
		"apk:debug": "npm run cap:build && cd android && ./gradlew assembleDebug",
		"apk:release": "npm run cap:build && cd android && ./gradlew assembleRelease",
		"tv:install": "npm run apk:debug && adb install android/app/build/outputs/apk/debug/app-debug.apk",
		"tv:test": "npm run cap:run"
	},
	"dependencies": {
		"@capacitor/android": "^7.4.2",
		"@capacitor/cli": "^7.4.2",
		"@capacitor/core": "^7.4.2",
		"@ionic/react": "^8.7.0",
		"classnames": "^2.3.2",
		"cors": "^2.8.5",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"ionicons": "^8.0.13",
		"lodash.debounce": "^4.0.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.20.1",
		"video.js": "^8.23.3"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.32.0",
		"@playwright/test": "^1.48.0",
		"@types/lodash.debounce": "^4.0.9",
		"@types/react": "^18.2.37",
		"@types/react-dom": "^18.2.15",
		"@typescript-eslint/eslint-plugin": "^6.10.0",
		"@typescript-eslint/parser": "^6.10.0",
		"@vercel/node": "^5.3.7",
		"@vitejs/plugin-react": "^4.1.1",
		"@vitest/coverage-v8": "^2.1.8",
		"@vitest/ui": "^2.1.8",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.4",
		"globals": "^16.3.0",
		"jsdom": "^25.0.1",
		"less": "^4.2.0",
		"playwright": "^1.48.0",
		"prettier": "^3.4.2",
		"typescript": "^5.2.2",
		"typescript-eslint": "^8.38.0",
		"vite": "^7.0.4",
		"vitest": "^2.1.8"
	}
}
